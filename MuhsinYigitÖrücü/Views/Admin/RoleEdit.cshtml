@model EntityLayer.Concreate.Role
@{
    ViewBag.Title = "RoleEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" action="~/Admin/RoleUpdate">
    <div class="modal-body">
        <div class="mb-3">
            @Html.HiddenFor(x => x.RoleID, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label for="RoleType" class="form-label">Role Type</label>
            @Html.TextBoxFor(x => x.RoleType, new { @class = "form-control" })
        </div>
    </div>
    <div class="modal-footer">
        <a href="@Url.Action("Role")" class="btn btn-danger btn-sm">Return</a>
        <button type="submit" class="btn btn-primary btn-sm">Edit</button>
    </div>
</form>
