@using EntityLayer.Models
@model List<GetImagesByPortfolyoID>
@{
    ViewBag.Title = "PortfolyoImages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Default box -->
<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th>
                        Heading Name
                    </th>

                    <th style="width:40%">
                        Images
                    </th>
                    <th style="width:30%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.HeadingName
                        </td>
                        <td>
                            <ul class="list-inline">
                                @for (int i = 0; i < item.Images.Count; i++)
                                {
                                    <li class="list-inline-item">
                                        <img src="@(item.Images[i])" class="table-avatar" style="width:50px; cursor:pointer">
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-info btn-sm" href="@Url.Action("PortfolyoImagesEdit", "Admin", new {id = item.PortfolyoID})">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>


<div class="table-header">
    <button class="btn-add" data-toggle="modal" data-target="#modal1">
        <i class="fas fa-plus"></i> Add
    </button>
</div>

<div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="modal1Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header">
                <h2 class="modal-title" id="modal1Label" style="margin:0 0 0 9rem">Add PortfolyoImages</h2>
            </div>

            <form method="post" action="~/Admin/PortfolyoImagesAdd">
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="Images" class="form-label">Image Url</label>
                        <input type="text" name="Images" id="Images" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="ShortDescription" class="form-label">Heading Name</label>
                        @Html.DropDownList("PortfolyoID", (IEnumerable<SelectListItem>)ViewBag.PortfolyoHeading, new { @class = "form-control" })
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-sm">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>