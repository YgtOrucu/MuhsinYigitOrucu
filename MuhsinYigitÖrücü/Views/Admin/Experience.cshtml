@using EntityLayer.Concreate
@model List<Experience>
@{
    ViewBag.Title = "Experience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-wrapper">
    <table class="modern-table">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Job Name</th>
                <th>Place</th>
                <th>Description</th>
                <th>Technologies</th>
                <th>Date</th>
                <th>Status</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CompanyName</td>
                    <td>@item.JobName</td>
                    <td>@item.Place</td>
                    <td>@(item.Description.Length < 40 ? item.Description : item.Description.Substring(0,35)) ...</td>
                    <td>@(item.Technologies.Length < 15 ? item.Technologies : item.Technologies.Substring(0,17)) ...</td>
                    <td>@item.Date</td>
                    @if (item.Status)
                    {
                        <td>
                            <span class="status active">Active</span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span class="status passive">Passive</span>
                        </td>
                    }
                    <td>
                        <a href="@Url.Action("ExperienceEdit", "Admin", new {id = item.ExperienceID})" class="btn-edit"><i class="fas fa-pen"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="table-header">
    <button class="btn-add" data-toggle="modal" data-target="#modal1">
        <i class="fas fa-plus"></i> Add
    </button>
</div>

<div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="modal1Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header">
                <h2 class="modal-title" id="modal1Label" style="margin:0 0 0 9rem">Add Experience</h2>
            </div>

            <form method="post" action="~/Admin/ExperienceAdd">
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="CompanyName" class="form-label">Company Name</label>
                        <input type="text" name="CompanyName" id="CompanyName" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="JobName" class="form-label">Job Name</label>
                        <input type="text" name="JobName" id="JobName" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="Place" class="form-label">Place</label>
                        <input type="text" name="Place" id="Place" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        @Html.TextArea("Description", null, 4, 0, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <label for="Technologies" class="form-label">Technologies</label>
                        @Html.TextArea("Technologies", null, 2, 0, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <label for="Date" class="form-label">Date</label>
                        <input type="text" name="Date" id="Date" class="form-control">
                    </div>

                    <label for="AdminStatus" class="form-label">Status</label>
                    <div class="form-check-inline">
                        <div class="form-check">
                            <input class="form-check-input" id="durumAktif" name="Status" type="radio" value="True">
                            <label class="form-check-label" for="durumAktif">Active</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" id="durumPasif" name="Status" type="radio" value="False">
                            <label class="form-check-label" for="durumPasif">Pasive</label>
                        </div>
                    </div>

                    <br />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-sm">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>


