@model EntityLayer.Concreate.Education
@{
    ViewBag.Title = "EducationEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" action="~/Admin/EducationUpdate">
    <div class="modal-body">
        <div class="mb-3">
            @Html.HiddenFor(x => x.EducationID, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="HeadingName" class="form-label">Heading Name</label>
            @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="SubHeadingName" class="form-label">SubHeadingName</label>
            @Html.TextBoxFor(x => x.SubHeadingName, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="SubHeadingName1" class="form-label">SubHeadingName1</label>
            @Html.TextBoxFor(x => x.SubHeadingName1, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="Date" class="form-label">Date</label>
            @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
        </div>

        <label for="AdminStatus" class="form-label">Status</label>
        <div class="form-check-inline">
            <div class="form-check">
                @Html.RadioButtonFor(x => x.Status, true, new { @class = "form-check-input" })
                <label class="form-check-label" for="durumAktif">Active</label>
            </div>
            <div class="form-check">
                @Html.RadioButtonFor(x => x.Status, false, new { @class = "form-check-input" })
                <label class="form-check-label" for="durumPasif">Pasive</label>
            </div>
        </div>

        <br />
    </div>
    <div class="modal-footer">
        <a href="@Url.Action("Education")" class="btn btn-danger btn-sm">Return</a>
        <button type="submit" class="btn btn-primary btn-sm">Edit</button>
    </div>
</form>

