@model EntityLayer.Concreate.Experience
@{
    ViewBag.Title = "ExperienceEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" action="~/Admin/ExperienceUpdate">
    <div class="modal-body">
        <div class="mb-3">
            @Html.HiddenFor(x => x.ExperienceID, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="CompanyName" class="form-label">Company Name</label>
            @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="JobName" class="form-label">Job Name</label>
            @Html.TextBoxFor(x => x.JobName, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="Place" class="form-label">Place</label>
            @Html.TextBoxFor(x => x.Place, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            @Html.TextAreaFor(x => x.Description, 4, 0, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="Technologies" class="form-label">Technologies</label>
            @Html.TextAreaFor(x => x.Technologies, 2, 0, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="Date" class="form-label">Date</label>
            @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
        </div>

        <label for="AdminStatus" class="form-label">Status</label>
        <div class="form-check-inline">
            <div class="form-check">
                @Html.RadioButtonFor(x => x.Status, true, new { @class = "form-check-input" })
                <label class="form-check-label" for="durumAktif">Active</label>
            </div>
            <div class="form-check">
                @Html.RadioButtonFor(x => x.Status, false, new { @class = "form-check-input" })
                <label class="form-check-label" for="durumPasif">Pasive</label>
            </div>
        </div>
        <br />
    </div>
    <div class="modal-footer">
        <a href="@Url.Action("Experience")" class="btn btn-danger btn-sm">Return</a>
        <button type="submit" class="btn btn-primary btn-sm">Edit</button>
    </div>
</form>

