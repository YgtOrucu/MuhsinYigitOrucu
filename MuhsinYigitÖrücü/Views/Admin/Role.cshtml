@using EntityLayer.Models
@model List<GetMembersImageByRoleID>
@{
    ViewBag.Title = "Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Default box -->
<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th>
                        Role Type
                    </th>

                    <th style="width:40%">
                        Team Members
                    </th>
                    <th style="width:30%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.RoleType
                        </td>
                        <td>
                            <ul class="list-inline">
                                @for (int i = 0; i < item.Images.Count; i++)
                                {
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@(item.Images[i])">
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-info btn-sm" href="@Url.Action("GetAdminByRoleType", "Admin", new {id = item.RoleID})">
                                <i class="fas fa-folder">
                                </i>
                                View Members
                            </a>
                            <a class="btn btn-info btn-sm" href="@Url.Action("RoleEdit", "Admin", new {id = item.RoleID})">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
