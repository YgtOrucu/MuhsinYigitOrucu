
@{
    Layout = null;
    var errormessage = TempData["ErrorMessage"] as string;
    var Action = TempData["RedirectToAction"] as string;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error - Login Failed</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #ff4e50, #f9d423);
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .error-container {
            background: #fff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            text-align: center;
            max-width: 400px;
            width: 100%;
        }

        .error-icon {
            font-size: 60px;
            color: #ff4e50;
            margin-bottom: 20px;
        }

        h1 {
            font-size: 1.8rem;
            color: #333;
            margin-bottom: 10px;
        }

        p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 20px;
        }

        .btn {
            display: inline-block;
            padding: 12px 24px;
            background: #ff4e50;
            color: #fff;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            transition: background 0.3s ease;
        }

            .btn:hover {
                background: #e63e3f;
            }

        .error-message ul {
            list-style-type: disc;
            padding-left: 20px;
            text-align: left;
            margin: 0;
        }

        .error-message li {
            margin-bottom: 6px;
            color: #a33;
            font-size: 14px;
        }
    </style>
    <!-- Font Awesome ikonları için -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="error-container">
        <div class="error-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h1>Bir Hata Oluştu !!</h1>

        <div class="error-message">
            @if (errormessage != null && errormessage.Any())
            {
                var split = errormessage.Split(',');
                <ul>
                    @foreach (var msg in split)
                    {
                        <li>@msg</li>
                    }
                </ul>
            }
            else
            {
                @TempData["ErrorMessage"] <!-- Tek hata varsa -->
            }
        </div>
        <a href="@Action" class="btn">Geri Dön</a>
    </div>
</body>
</html>